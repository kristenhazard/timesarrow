<h1>items</h1>

<% form_tag items_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table border=5>
<% @items.each do |item| %>
  <tr valign="top">
    <td><%= link_to item.id, edit_item_path(item) %></td>
    <td><%= link_to item.title, item %></td>
    <td><%=h item.author %></td>
    <td><%=h truncate(item.description, :length => 50) %></td>
    <td><%=h item.asin %></td>
    <td><%=h item.itemtype %></td>
    <td><%=h item.publicationdate %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @items %>
<%= link_to 'New item', new_item_path %>
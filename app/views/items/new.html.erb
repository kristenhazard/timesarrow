<h1>New item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :asin %><br />
    <%= f.text_field :asin %>
  </p>
  <p>
    <%= f.label :detailpageurl %><br />
    <%= f.text_field :detailpageurl %>
  </p>
  <p>
    <%= f.label :smallimageurl %><br />
    <%= f.text_field :smallimageurl %>
  </p>
  <p>
    <%= f.label :mediumimageurl %><br />
    <%= f.text_field :mediumimageurl %>
  </p>
  <p>
    <%= f.label :publicationdate %><br />
    <%= f.date_select :publicationdate %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>

<% form_tag :controller => 'search', do %>
  <h3>Enter keywords:</h3>
  <%= text_field_tag(:keywords, params[:keywords]) %>
  <%= submit_tag "Search" %>
  <h3 id="1">Results amazon-ecs</h3>
  <%= flash[:error] %>
  <table border="0" cellspacing="5" cellpadding="5">
  <% if @itemarray %>
    <% @itemarray.each { |item| %>
      <tr valign="top">
        <td>
          <% if item.get("smallimage/url") %> 
            <%= image_tag item.get("smallimage/url") %>
          <% end%>
        </td>
        <td> <%= h item.get("title") %> <br>
             by <%= h item.get("author") %></td>
      </tr>
    <% } %>
  <% end %>
  </table>
<% end %>
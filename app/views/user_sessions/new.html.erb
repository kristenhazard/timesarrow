<% title "Sign In" %> 

<h1>SIGN IN</h1>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username, "username or email" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password, "password" %><br />
    <%= f.password_field :password %><span id="forgot-pw"><%= link_to "forgot password", new_password_reset_path %></span>
  </p>
  <p><%= f.check_box :remember_me %><%= f.label :remember_me, "remember be" %></p>
  <p>
    <%= f.submit "login" %>
  </p>
<% end %>
<% title "Login" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.check_box :remember_me %><%= f.label :remember_me %></p>
  <p>
    <%= f.submit "Login" %>
    <span id="forgot-pw"><%= link_to "Forgot password", new_password_reset_path %></span>
  </p>
<% end %>
<h1>New timeline</h1>

<% form_for(@timeline) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 10 %>
  </p>
  <p>
    <%= f.label :imageurl %><br />
    <%= f.text_field :imageurl %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.select  :category,
                  Timeline::TIMELINE_CATEGORIES,
                  :prompt => "Select type"
    %>
  </p>
  <p>
    <%= f.label :subcategory %><br />
    <%= f.select  :subcategory,
                  Timeline::TIMELINE_SUBCATEGORIES,
                  :prompt => "Select type"
    %>
  </p>
  <p>
    <%= f.label :featured %><br />
    <%= f.select  :featured,
                  Timeline::TIMELINE_FEATURED,
                  :prompt => "Select type"
    %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', timelines_path %>
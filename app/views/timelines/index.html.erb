<% form_tag timelines_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<div id="pagination"><%= will_paginate @timelines %></div>
<table id="timelinestable">
<% @timelines.each do |timeline| %>
  <tr>
    <td>
      <!--<%=h timeline.name %>-->
      <%= link_to timeline.name.upcase, timeline %>
    </td>
  </tr>
  <tr>
    <td>
      <%= render :partial => 'carousel_small', :locals => { :timeline => timeline } %>
    </td>
  </tr>
<% end %>
</table>

<!-- carousel -->
<% @timelines.each do |timeline| %>
  <script>
    new UI.Carousel("horizontal_carousel_small_"+ <%= timeline.id %>);
  </script>
<% end %>

